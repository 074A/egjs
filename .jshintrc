// https://github.com/jshint/jshint/blob/master/src/messages.js
{
    "boss": true,
    "curly": true,
    "eqeqeq": true,
    "eqnull": true,
    "expr": true,
    "immed": true,
    "noarg": true,
    "onevar": true,
    "quotmark": "double",
    "smarttabs": true,
    "trailing": true,
    "undef": true,
    "unused": true,
    "node": true,
    "-W069" : true, // "['{a}'] is better written in dot notation."
    "-W086": true,  // "Expected a 'break' statement before '{a}'."
    "globals" : {
        "jQuery" : true,
        "eg" : true,
        "window" : true,
        "document" : true,
        "Hammer" : true,
        "navigator" : true,
        "requestAnimationFrame" : true,
        "cancelAnimationFrame" : true
    }
}
